<!DOCTYPE html>
<html lang"="<%- config.language %>">
  <head>

    <%- partial('_partial/meta') %>

    <title><%- config.title %></title>

    <%- partial('_partial/top-link') %>

  </head>

  <body>
    <%- partial('_partial/bg') %>
    <%- partial('_partial/menubar-header') %>

    <div class="col-lg-12 mx-auto p-3">
      
      <div class="row">
	
	<div class="col-md-3">
	  <%- partial('_partial/aplayer') %>
	</div>
	
	<div class="col-md-6 " id="pjax-container">
	  <%- body %>
	</div>
	
	<div class="col-md-3" id="pjax-container">
	  <% if (is_post()) { %>
	    <div class="card w-75 mt-3 mb-3 rounded-5 shadow-lg p-3 sticky">
	      <%- toc(page.content) %>
	    </div>
	  <% } %>
	</div>
      </div>

      <%- partial('_partial/footer') %>

    </div>
    <%- partial('_partial/after-link') %>
  </body>
</html>
